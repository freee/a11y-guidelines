# freee_a11y_gl configuration sample
#
# Usage:
# 1. Copy this file to one of the following locations:
#    - ./config.yaml (current directory)
#    - ~/.config/freee_a11y_gl/config.yaml (Unix-like systems)
#    - %APPDATA%\freee_a11y_gl\config.yaml (Windows)
# 2. Or specify location with FREEE_A11Y_GL_CONFIG environment variable
#
# Note: All settings are optional. Default values will be used if not specified.

# Language settings
languages:
  # Available languages
  available:
    - ja
    - en
  # Default language
  default: ja
  # Languages that must be defined in all translations
  required:
    - ja
    - en

# URL configurations
urls:
  # Base URLs for each language
  base:
    ja: "https://a11y-guidelines.freee.co.jp"
    en: "https://a11y-guidelines.freee.co.jp/en"
  # Documentation paths
  docs:
    ja: "/categories/"
    en: "/en/categories/"

# Separator configurations
separators:
  # Text separators (used in titles, etc.)
  text:
    ja: "："
    en: ": "
  # List item separators
  list:
    ja: "、"
    en: ", "
  # Basic conjunctions
  and:
    ja: "と"
    en: " and "
  or:
    ja: "または"
    en: " or "
  # Complex conjunctions (used in condition descriptions)
  and_conjunction:
    ja: "、かつ"
    en: ", and "
  or_conjunction:
    ja: "、または"
    en: ", or "

