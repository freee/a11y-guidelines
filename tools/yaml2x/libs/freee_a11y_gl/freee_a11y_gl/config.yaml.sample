# freee_a11y_gl Configuration Sample

# Base URL for the site
base_url: "https://a11y-guidelines.freee.co.jp"

# Language settings
languages:
  available: ["ja", "en"]
  default: "ja"

# Path settings (must start and end with /)
paths:
  guidelines: "/categories/"     # Path to guidelines categories
  faq: "/faq/articles/"         # Path to FAQ articles

# Language-specific configurations
# To add a new language:
# 1. Add the language code to languages.available array above
# 2. Copy an existing language block below and modify values as needed
locale:
  # Japanese configuration
  ja:
    text_separator: "："        # Text separator for labels
    list_separator: "、"        # Separator for list items
    and_separator: "と"
    or_separator: "または"
    and_conjunction: "、かつ"     # For combining conditions with AND
    or_conjunction: "、または"    # For combining conditions with OR
    pass_singular_text: "_を満たしている"  # Text for pass conditions
    pass_plural_text: "_を満たしている"  # Text for pass conditions
    date_format: "%Y年%-m月%-d日"  # strftime format

  # English configuration
  en:
    text_separator: ": "        # Text separator for labels
    list_separator: ", "        # Separator for list items
    and_separator: " and "
    or_separator: " or "
    and_conjunction: ", and "      # For combining conditions with AND
    or_conjunction: ", or "        # For combining conditions with OR
    pass_singular_text: " is true"       # Text for pass conditions
    pass_plural_text: " are true"       # Text for pass conditions
    date_format: "%B %-d, %Y"  # strftime format

# Note: This configuration can be loaded from:
# 1. Explicitly specified path via FREEE_A11Y_GL_CONFIG environment variable
# 2. Current directory (config.yaml or config.yml)
# 3. Platform-specific standard configuration directories:
#    - Windows: %APPDATA%\freee_a11y_gl\config.yaml
#    - macOS: /Library/Application Support/freee_a11y_gl/config.yaml
#    - Linux: /etc/freee_a11y_gl/config.yaml
#    - Unix-like: ~/.config/freee_a11y_gl/config.yaml
